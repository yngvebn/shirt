{
  "name": "shirt",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "start": "tsc && npm run watch",
    "watch": "concurrently \"npm run tsc:w\" \"npm run lite\" \"npm run watch-css\"",
    "lite": "lite-server",
    "postinstall": "typings install && npm run build",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "build-css": "node-sass --include-path scss scss/main.scss public/css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "build": "tsc && npm run build-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yngvebn/shirt.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yngvebn/shirt/issues"
  },
  "homepage": "https://github.com/yngvebn/shirt#readme",
  "dependencies": {
    "@angular/common": "~2.1.0",
    "@angular/compiler": "~2.1.0",
    "@angular/core": "~2.1.0",
    "@angular/forms": "~2.1.0",
    "@angular/http": "~2.1.0",
    "@angular/material": "^2.0.0-alpha.9-3",
    "@angular/platform-browser": "~2.1.0",
    "@angular/platform-browser-dynamic": "~2.1.0",
    "@angular/router": "~3.1.0",
    "@angular/upgrade": "~2.1.0",
    "angular-in-memory-web-api": "~0.1.5",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "karma-phantomjs2-launcher": "^0.5.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.12",
    "systemjs": "0.19.39",
    "zone.js": "^0.6.25"
  },
  "devDependencies": {
    "concurrently": "^3.0.0",
    "gulp-inline-ng2-template": "^3.0.1",
    "jasmine": "^2.5.2",
    "lite-server": "^2.2.2",
    "node-sass": "^3.10.1",
    "nodemon": "^1.11.0",
    "typescript": "^2.0.3",
    "typings": "^1.4.0",
    "wallaby-gulp-adapter": "0.0.1"
  }
}